<% galleryHelper = (gallery) -> %>
  <div class="list">
    <img class="list_view" src=<%- gallery.image %> alt="<%- gallery.name %>">
    <h3><%- gallery.name %></h3>
    <p><%- gallery.uname %></p>
  </div>
  <div class="col-xs-4"></div>
<% end %>

<% if @galleries?.length : %>
  <div class="row center-block">
    <% for gallery in @galleries : %>
      <%- galleryHelper gallery %>
    <% end %>
  </div>
<% else : %>
  <p>まだ投稿がありません。</p>
<% end %>
